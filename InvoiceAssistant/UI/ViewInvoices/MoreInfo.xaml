        <Style x:Key="buttonYesNoStyle" TargetType="Button">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="theBorder" CornerRadius="6" Background="White" BorderThickness="0" Height="23" Width="60"  >
                            <TextBlock x:Name="theText" Margin="10,0,0,0" Text="{TemplateBinding Content}"  VerticalAlignment="Center" HorizontalAlignment="Center" FontFamily="Segoe UI"  FontSize="15"  Foreground="Black" />
                        </Border>

                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <!--<Setter TargetName="theText" Property="Foreground" Value="Yellow" />-->
                                <Setter  TargetName="theBorder" Property="Background" Value="#E3E3E3" />

                            </Trigger>


                            <Trigger Property="IsPressed" Value="True">
                                <!--<Setter  TargetName="theBorder" Property="Background" Value="#162F5F" />
                                            <Setter  TargetName="theBorder" Property="BorderBrush" Value="Yellow" />-->
                                <Setter  TargetName="theBorder" Property="BorderBrush" Value="#006432" />
                                <Setter  TargetName="theBorder" Property="BorderThickness" Value="1" />
                                <Setter  TargetName="theBorder" Property="Background" Value="#BCD9B6" />
                            </Trigger>

                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        
    </UserControl.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="42" />
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Border Background="#001E3A">
            <Grid>
                <TextBlock Text="More Info" FontWeight="Bold" Foreground="White" FontSize="25" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                <Button Name="cmdClose" Content="Close" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,5,5,0" Style="{StaticResource buttonCloseStyle}" Click="cmdClose_Click" />
            </Grid>
        </Border>

        <Border Background="#024787" Grid.Row="1" />
        
        <Grid Grid.Row="1" Margin="0,0,00,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="auto"/>
                <ColumnDefinition Width="auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Grid Name="addressGrid" Grid.Column="0" Margin="10,20,0,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="382"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="23.33" />
                    <RowDefinition Height="37"/>
                    <RowDefinition Height="37"/>
                    <RowDefinition Height="37"/>
                    <RowDefinition Height="37"/>
                    <RowDefinition Height="37"/>
                    <RowDefinition Height="37"/>
                </Grid.RowDefinitions>

                <Border Background="Black">
                    <Grid>
                        <TextBlock FontSize="15pt" FontFamily="Arial" Foreground="#FFC800" Text="Address" Margin="20,0,0,0"/>
                        <ComboBox Name="cbAddresses" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="0,0,10,0" Width="220" />
                    </Grid>
                </Border>

                <Border Grid.Row="1" Background="#28609E" Margin="0,2,0,2">
                    <TextBlock Name="tbCompanyName" Foreground="White" FontFamily="Arial" FontSize="12pt" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="20,0,0,0" />
                </Border>
                
                <Border Grid.Row="2" Background="#28609E" Margin="0,2,0,2">
                    <TextBlock Name="tbAddress1" Foreground="White" FontFamily="Arial" FontSize="12pt" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="20,0,0,0" />
                </Border>

                <Border Grid.Row="3" Background="#28609E" Margin="0,2,0,2">
                    <TextBlock Name="tbAddress2" Foreground="White" FontFamily="Arial" FontSize="12pt" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="20,0,0,0"/>
                </Border>

                <Border Grid.Row="4" Background="#28609E" Margin="0,2,0,2">
                    <TextBlock Name="tbAddress3" Foreground="White" FontFamily="Arial" FontSize="12pt" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="20,0,0,0" />
                </Border>

                <Border Grid.Row="5" Background="#28609E" Margin="0,2,0,2">
                    <TextBlock Name="tbAddress4" Foreground="White" FontFamily="Arial" FontSize="12pt" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="20,0,0,0"/>
                </Border>

                <Border Grid.Row="6" Background="#28609E" Margin="0,2,0,2">
                    <TextBlock Name="tbAddress5" Foreground="White" FontFamily="Arial" FontSize="12pt" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="20,0,0,0"/>
                </Border>

            </Grid>

            <Border Grid.Column="1" Background="#2c834a" CornerRadius="17" Width="260" Height="33.22" VerticalAlignment="Top" Margin="20,30,20,0">
                <Grid>
                    <TextBlock FontSize="14pt" Foreground="White" Text="Include Miles" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="20,0,0,0" />
                    <Button Name="cmdIncludeMiles" Content="Yes" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="0,0,20,0" Style="{StaticResource buttonYesNoStyle}" Click="cmdIncludeMiles_Click"/>
                </Grid>
            </Border>

            <ScrollViewer Grid.Column="2" Margin="0,20,10,0" VerticalScrollBarVisibility="Auto" Height="300">
            <local:PaymentGrid x:Name="paymentGrid" />
            </ScrollViewer>

        </Grid>
        
        
    </Grid>
</UserControl>
